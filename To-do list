tasks = []

def Add():
    task = input('add your task')
    tasks.append(task)

def Check():
    for i, task in enumerate(tasks, 1):
        print(f'{i}. {task}')

def Delete():
    index = int(input(â€˜choose the number of task you want to delete:')) - 1
    if 0 <= index < len(tasks):
        del tasks[index]
    else:
        print('invalid number')

    
while True:
    print('1. add you task')
    print('2. check your task')
    print('3. delete your task')
    print('4. quit')
    choice = input('choose your operation:')
    if choice == '1':
        Add()
    else if choice == '2':
        Check()
    else if choice == '3':
        Delete()
    else if choice == '4':
        break
    else: 
    print('invalid operation')
